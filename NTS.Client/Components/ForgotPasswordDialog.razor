@page "/forgotpassworddialog"
@inherits ForgotPasswordDialogBase

<MudDialog Style="max-height: 150px; width: 500px;">
    <DialogContent>
        <MudText Class="text-3xl">Forgot Password</MudText>
        <MudContainer>
            <MudContainer>
                <MudTextField Label="Enter Your Email" @bind-Value="forgotPasswordDto.Email"></MudTextField>
            </MudContainer>
            <MudContainer>
                <MudButton Color="Color.Primary" OnClick="Submit">Submit</MudButton>
                <MudButton Color="Color.Error" OnClick="Cancel">Cancel</MudButton>
            </MudContainer>
        </MudContainer>
    </DialogContent>
</MudDialog>
